<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.494" android:id="@+id/constraintLayout">

        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/field1"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:hint="Поле2"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/field2"
                app:layout_constraintStart_toEndOf="@+id/field1" android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent" android:hint="Поле2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/resultField"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.494" android:hint="Зміст"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/resultField" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <Button
                android:text="Ввід данних"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonEnterData"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Вивід даних"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonOutputData"
                app:layout_constraintStart_toEndOf="@+id/buttonEnterData" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Видалити"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonDelete"
                app:layout_constraintStart_toEndOf="@+id/buttonOutputData" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>